<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonelTakipOtonomSistemi.Views.IstenAyrılma"
             Title="IstenAyrılma"
             Loaded="ContentPage_Loaded">

    <Grid>
        <Image Source="personel.png" Aspect="AspectFill" HeightRequest="950"/>
        <Label Text="İşten Ayrılma Menüsü" HorizontalOptions="Center" VerticalOptions="Start" TextColor="DarkRed" FontSize="25" FontAttributes="Italic"/>
        <Frame WidthRequest="300" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,50"/>
        <HorizontalStackLayout Margin="500,100">
            <Entry x:Name="kullanıcıAdı" VerticalOptions="Start" HorizontalOptions="Start"  Placeholder="Ad" PlaceholderColor="White" TextColor="Yellow" Background="Black"/>
            <Entry x:Name="kullanıcıSoyadı" VerticalOptions="Start" HorizontalOptions="Start" Placeholder="Soyad" PlaceholderColor="White" TextColor="Yellow" Background="Black"/>
            <Entry x:Name="kullanıcıPersonelId" VerticalOptions="Start" HorizontalOptions="Start" Placeholder="PersonelId" PlaceholderColor="White" TextColor="Yellow" Background="Black"/>
            <Entry x:Name="kullanıcıDogumTarihi" VerticalOptions="Start" HorizontalOptions="Start" Placeholder="DogumTarihi" PlaceholderColor="White" TextColor="Yellow" Background="Black"/>
            <Entry x:Name="kullanıcıTcNo" VerticalOptions="Start" HorizontalOptions="Start" Placeholder="TcNo" PlaceholderColor="White" TextColor="Yellow" Background="Black"/>
            <Entry x:Name="kullanıcıDepertman" VerticalOptions="Start" HorizontalOptions="Start"  Placeholder="Depertman" PlaceholderColor="White" TextColor="Yellow" Background="Black"/>
            <Entry x:Name="kullanıcıPozisyon" VerticalOptions="Start" HorizontalOptions="Start"  Placeholder="Pozisyon" PlaceholderColor="White" TextColor="Yellow" Background="Black"/>
        </HorizontalStackLayout>
        <Frame WidthRequest="600" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,150" />
        <HorizontalStackLayout Margin="600,210">
            <Label Text="İşten Ayrılmak İstediğimi Onaylıyorum" Margin="0,10" TextColor="Red" FontAttributes="Italic"/>
            <CheckBox x:Name="onay1" Color="Red" VerticalOptions="Start" />
        </HorizontalStackLayout>
        <HorizontalStackLayout Margin="600,250">
            <Label Text="Bütün Koşulları Kabul Ediyorum " Margin="0,10" TextColor="Red" FontAttributes="Italic"/>
            <CheckBox x:Name="onay2" Color="Red" VerticalOptions="Start" />
        </HorizontalStackLayout>
        <HorizontalStackLayout Margin="600,290">
            <Label Text="Kendi Rızamla Ayrılıyorum" Margin="0,10" TextColor="Red" FontAttributes="Italic"/>
            <CheckBox x:Name="onay3" Color="Red" VerticalOptions="Start" />
        </HorizontalStackLayout>
        <Button VerticalOptions="End" HorizontalOptions="Center" WidthRequest="250" Margin="0,200" BackgroundColor="Bisque" Text="Ayrıl" Clicked="Button_Clicked"/>
        <Frame WidthRequest="600" HorizontalOptions="Center" VerticalOptions="End" Margin="0,150" />
    </Grid>
</ContentPage>
